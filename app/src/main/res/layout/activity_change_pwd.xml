<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rgb_fafafa"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/common_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="20dp"
        android:background="@color/rgb_D8D8D8" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="手机号"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <com.lechuang.dalaba.view.defineView.ClearEditText
                android:id="@+id/et_phoneNumber"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textColorHint="@color/rgb_CCCCCC"
                android:textCursorDrawable="@drawable/editcursor_solid_red_size2"
                android:textSize="12dp" />

        </LinearLayout>



        <LinearLayout
            android:background="@color/white"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="验证码"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <com.lechuang.dalaba.view.defineView.ClearEditText
                android:id="@+id/et_good"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="13dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请输入验证码"
                android:textColor="@color/black"
                android:textColorHint="@color/rgb_CCCCCC"
                android:textCursorDrawable="@drawable/editcursor_solid_red_size2"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@drawable/icon_yanzhengma"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/rgb_F62C52"
                android:textSize="10dp" />

        </LinearLayout>




        <LinearLayout
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="新密码"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <com.lechuang.dalaba.view.defineView.ClearEditText
                android:id="@+id/et_mima"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="13dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="请设置新登录密码"
                android:textColor="@color/black"
                android:textColorHint="@color/rgb_CCCCCC"
                android:textCursorDrawable="@drawable/editcursor_solid_red_size2"
                android:textSize="12dp" />


        </LinearLayout>



    </LinearLayout>



    <TextView
        android:id="@+id/btn_complete"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/main_button"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="18dp" />

</LinearLayout>
