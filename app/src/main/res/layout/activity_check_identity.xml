<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rgb_fafafa"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_back"
            style="@style/Button_Style_0"
            android:layout_gravity="center|left"
            android:scaleType="center"
            android:src="@drawable/main_fanhui" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="身份验证"
            android:textColor="@color/main"
            android:textSize="15sp" />
    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:id="@+id/line_set_user"
            android:layout_width="match_parent"
            android:layout_height="55dp"
           >

            <TextView
                android:paddingLeft="20dp"
                android:id="@+id/tt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="手机号     "
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/tt"
                android:background="@null"
                android:textColor="@color/rgb_929292"
                android:textSize="12dp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center_vertical"
           >

            <TextView
                android:paddingLeft="20dp"
                android:id="@+id/tt2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="验证码     "
                android:textColor="@color/black"
                android:textSize="16dp"

                />

            <com.lechuang.dalaba.view.defineView.ClearEditText
                android:id="@+id/et_code"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="13dp"
                android:layout_toRightOf="@+id/tt2"
                android:minWidth="100dp"
                android:background="@null"
                android:hint="请输入验证码"
                android:textColor="@color/rgb_CCCCCC"
                android:textColorHint="@color/rgb_CCCCCC"
                android:textCursorDrawable="@drawable/editcursor_solid_red_size2"
                android:textSize="12dp" />

            <TextView
                android:layout_marginRight="10dp"
                android:id="@+id/tv_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@drawable/icon_yanzhengma"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/main"
                android:textSize="10dp" />

        </RelativeLayout>


    </LinearLayout>


    <Button
        android:id="@+id/btn_change_ok"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/main_button"
        android:text="完成"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="一个手机号只能作为一个账号名登陆,一个手机\n号只能绑定一个用户"
        android:textColor="@color/rgb_929292"
        android:textSize="12dp"
        android:visibility="invisible" />

</LinearLayout>
